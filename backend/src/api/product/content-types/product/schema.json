{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "storeId": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 1
    },
    "name": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "unique": false
    },
    "description": {
      "pluginOptions": {},
      "type": "richtext",
      "required": false
    },
    "vendor": {
      "pluginOptions": {},
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ],
      "pluginOptions": {}
    },
    "category": {
      "pluginOptions": {},
      "type": "string",
      "maxLength": 20,
      "minLength": 1
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "product.variant",
      "required": true,
      "max": 10,
      "min": 1
    },
    "ratings": {
      "type": "component",
      "repeatable": true,
      "component": "product.rating"
    },
    "favorites": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "favoriteProducts"
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "stores",
  "info": {
    "singularName": "store",
    "pluralName": "stores",
    "displayName": "store",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "owner": {
      "type": "integer",
      "required": true,
      "minLength": 1
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "about": {
      "type": "text"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "user-information.address",
      "required": true
    },
    "openingHours": {
      "type": "component",
      "repeatable": true,
      "component": "user-information.opening-hours",
      "max": 7,
      "min": 0
    },
    "payments": {
      "type": "component",
      "repeatable": true,
      "component": "user-information.payment-method",
      "required": true,
      "min": 1
    },
    "open": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": ["$-USD", "€-EUR", "£-GBP", "$-AUD", "$-CAD", "CHF-CHF", "₺-TRY"],
      "required": true,
      "default": "€-EUR"
    },
    "deliver": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "deliveryCost": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "whatsAppOrder": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "meta": {
      "type": "json"
    },
    "cocNumber": {
      "type": "string",
      "unique": false
    },
    "vatNumber": {
      "type": "string"
    },
    "subscriptionId": {
      "type": "string",
      "unique": true,
      "private": true
    },
    "subscriptionStatus": {
      "type": "enumeration",
      "enum": [
        "TRIAL",
        "ACTIVE",
        "CANCELED",
        "INCOMPLETE",
        "EXPIRED",
        "UNPAID",
        "trialing",
        "active",
        "incomplete",
        "incomplete_expired",
        "past_due",
        "canceled",
        "unpaid"
      ],
      "default": "TRIAL",
      "required": true
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "store"
    },
    "workers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::customer.customer",
      "inversedBy": "workStores"
    },
    "ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rating.rating",
      "mappedBy": "store"
    },
    "favorites": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::customer.customer",
      "mappedBy": "favoriteStores"
    }
  }
}

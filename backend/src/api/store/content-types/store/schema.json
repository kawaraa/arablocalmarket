{
  "kind": "collectionType",
  "collectionName": "stores",
  "info": {
    "singularName": "store",
    "pluralName": "stores",
    "displayName": "store",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "about": {
      "type": "text"
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "myStores"
    },
    "employees": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "workStores"
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "user-information.address",
      "required": true
    },
    "cocNumber": {
      "type": "string",
      "unique": false,
      "private": true
    },
    "vatNumber": {
      "type": "string",
      "private": true
    },
    "stripeId": {
      "type": "string",
      "unique": true,
      "private": true
    },
    "stripeSubscriptionId": {
      "type": "string",
      "unique": true,
      "private": true
    },
    "subscriptionStatus": {
      "type": "enumeration",
      "enum": [
        "TRIAL",
        "ACTIVE",
        "CANCELED",
        "INCOMPLETE",
        "EXPIRED",
        "UNPAID"
      ],
      "default": "TRIAL",
      "required": true,
      "private": true
    },
    "openingHours": {
      "type": "component",
      "repeatable": true,
      "component": "user-information.opening-hours",
      "max": 7,
      "min": 0
    },
    "payments": {
      "type": "component",
      "repeatable": true,
      "component": "user-information.payment-method",
      "required": true,
      "min": 1
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "deliver": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "$-USD",
        "€-EUR",
        "£-GBP",
        "$-AUD",
        "$-CAD",
        "CHF-CHF",
        "₺-TRY"
      ],
      "required": true,
      "default": "€-EUR"
    },
    "deliveryCost": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "open": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "ratings": {
      "type": "component",
      "repeatable": true,
      "component": "product.rating"
    },
    "favorites": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "favoriteStores"
    }
  }
}
